<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.xtensive.plugins.pdfviewer" version="0.1.0" xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>PDFViewer</name>
    <description>Xtensive Technologies PDF viewer</description>
    <licence>Xtensive Technologies Licence</licence>
    <keywords>xtensive,pdf,viewer</keywords>


    <js-module name="PDFViewer" src="www/PDFViewer.js">
        <clobbers target="PDFViewer"/>
    </js-module>


    <!-- Android -->
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="PDFViewer">
                <param name="android-package" value="com.xtensive.plugins.pdfviewer.PDFViewer"/>
            </feature>
        </config-file>

        <config-file parent="/*" target="AndroidManifest.xml"></config-file>

        <source-file src="src/android/PDFViewer.java"
                     target-dir="src/com/xtensive/plugins/pdfviewer/PDFViewer"/>
    </platform>
</plugin>